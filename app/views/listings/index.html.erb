<p id="notice"><%= notice %></p>
<%= link_to 'New Listing', new_listing_path %>

<h1>Listings</h1>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <% unless listing.picture.attached? %>
          <td><%= link_to image_tag('defaultbox.jpg'), listing %></td>
        <% else %>
          <td><%= link_to image_tag(listing.picture), listing %></td>
        <% end %>

        

        <%# <% image_tag picture, listing_path ) %> 
        
        <%# <td><%= image_tag url_for(listing.picture) if listing.picture.attached? %> 
        <%# <% end %>
    
  
        <td><%= listing.title %></td>
        <td><%= listing.price %></td>

        <% if @mark == "yes" %>
          <%= current_user.phone_number %>
        <% end %>
        <td><%= link_to 'Show', listing %></td>
          <% if listing.user == current_user %>
            <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
            <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

