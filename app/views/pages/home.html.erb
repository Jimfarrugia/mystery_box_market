<div id="homepage">
  <!-- Slogan -->
  <h5 id="slogan" class="py-5 text-center text-muted">One person's mysterious trash is another's mysterious treasure.</h5>

  <% if @highest_priced_sale and @lowest_priced_sale %>
    <div id="extremes" class="row mb-5">
      <div class="col-sm-6 text-center">
        <%# Highest priced sale %>
        <% if @highest_priced_sale.picture.attached? %>
          <%= link_to image_tag(@highest_priced_sale.picture, class: "img-thumbnail"), sale_path(@highest_priced_sale.id) %>
        <% else %>
          <%= link_to image_tag('defaultbox.jpg', class: "img-thumbnail"), listing_path(@highest_priced_sale.id) %>
        <% end %>
        <h3 class="my-4"><%= @highest_priced_sale.title %></h3>
        <p class="h3">
          <del>$<%= @highest_priced_sale.price %></del>
          <span class="badge badge-success">SOLD</span>
        </p>
        <div class="description">
          <small><em><%= @highest_priced_sale.description %></em></small>
        </div>
      </div><!-- end of column -->

      <div class="col-sm-6 text-center">
        <%# Lowest priced sale %>
        <% if @lowest_priced_sale.picture.attached? %>
          <%= link_to image_tag(@lowest_priced_sale.picture, class: "img-thumbnail"), listing_path(@lowest_priced_sale.id) %>
        <% else %>
          <%= link_to image_tag('defaultbox.jpg', class: "img-thumbnail"), listing_path(@lowest_priced_sale.id) %>
        <% end %>
        <h3 class="my-4"><%= @lowest_priced_sale.title %></h3>
        <p class="h3">
          <del>$<%= @lowest_priced_sale.price %></del>
          <span class="badge badge-success">SOLD</span>
        </p>
        <div class="description">
          <small><em><%= @lowest_priced_sale.description %></em></small>
        </div>
      </div><!-- end of column -->
    </div><!-- end of #extremes -->
  <% end # (if @highest_priced_sale and @lowest_priced_sale) %>

  <!-- Browse Listings Enticement -->
  <div id="browse-enticement" class="row mb-4">
    <div class="col-sm-4 text-center">
      <%# Find a new image to put here %>
      <%= image_tag "transparent-mystery-box", class: "img-fluid mb-2" %>
    </div>
    <div class="col-sm-8">
      <h3 class="mb-4">Buy Something Mysterious...</h3>
      <p>Zombie ipsum reversus ab viral, nam rick grimes malum cerebro. De carne  corpora quaeritis.</p>
      <p>Summus brains sit​​, morbo vel maleficia?</p>
      <p>De apocalypsi gorger omero undead survivor dictum mauris!</p>
      <p>
        <%= link_to "Browse Listings", listings_path, class: "btn btn-primary" %>
      </p>
    </div>
  </div><!-- end of #browse-enticement.row -->

  <!-- Create Listing Enticement -->
  <div id="sell-enticement" class="row mb-4">
    <div class="col-sm-4 text-center">
      <%# Find a new image to put here %>
      <%= image_tag "yard-sale-kid", class: "img-fluid mb-2" %>
    </div>
    <div class="col-sm-8">
      <h3 class="mb-4">Have stuff to sell?</h3>
      <p>The voodoo sacerdos flesh eater, suscitat mortuos comedere carnem virus.</p>
      <p>Qui animated corpse, cricket bat max brucks terribilem incessu zomby.</p>
      <p>
        <%= link_to "Create a Listing", new_listing_path, class: "btn btn-primary" %>
      </p>
    </div>
  </div><!-- end of #sell-enticement.row -->

</div><!-- end of #homepage -->