<div id="sign-up">
  <h2 class="mb-4">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :full_name, "Full Name: " %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :full_name, class: "form-control", data: {cy: "fullname"} %>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :phone_number, "Phone Number: " %>
      </div>
      <div class="col-sm-8">
        <%= f.number_field :phone_number, class: "form-control", data: {cy: "phonenumber"} %>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :username, "Username: " %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :username, class: "form-control", data: {cy: "username"} %>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4">
        <span>Location</span>
      </div>
      <div class="col-sm-8">
        <div class="form-row">
          <div class="form-group col-4">
            <%= label_tag :city %>
            <%= text_field_tag :city, nil, class: "form-control", data: {cy: "city"} %>
          </div>
          <div class="form-group col-4">
            <%= label_tag :state %>
            <%= text_field_tag :state, nil, class: "form-control", data: {cy: "state"} %>
          </div>
          <div class="form-group col-4">
            <%= label_tag :country %>
            <%= text_field_tag :country, nil, class: "form-control", data: {cy: "country"} %>
          </div>
        </div>
      </div>
    </div><!-- end of row -->

    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :email, "Email: " %>
      </div>
      <div class="col-sm-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", data: {cy: "email" }%>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :password, "Password: " %>
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", data: {cy: "password"} %>
        <% if @minimum_password_length %>
          <small>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          </small>
        <% end %>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :password_confirmation, "Confirm Password: " %><br />
      </div>
      <div class="col-sm-8">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", data: {cy: "cpassword"} %>
      </div>
    </div><!-- end of row -->
    
    <div class="field form-group form-row">
      <div class="col-sm-4 col-form-label">
        <%= f.label :picture, "Profile Picture: " %>
      </div>
      <div class="col-sm-8">
        <%= f.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg', class: "form-control-file" %>
      </div>
    </div><!-- end of row -->

    <div class="actions form-group form-row">
      <div class="col-sm-4">
      </div>
      <div class="col-sm-8">
        <%= f.submit "Sign up", class: "btn btn-primary", data: {cy: "registrationsubmit"} %>
      </div>
    </div><!-- end of row -->

  <% end %>

  <div class="shared-links form-row">
    <div class="col-sm-4">
    </div>
    <div class="col-sm-8">
      <%= render "devise/shared/links" %>
    </div>
  </div><!-- end of .shared-links

</div><!-- end of #sign-up -->