<!DOCTYPE html>
<html>
  <head>
    <title>RailsTeamProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <!--Navbar-->
    <nav id="main-navbar" class="navbar navbar-dark bg-dark mb-4">
      <div class="container">
      <!-- Navbar brand -->
      <%= link_to "Mystery Box Market", root_path, class: "navbar-brand" %>
      <!-- Collapse button -->
      <button class="navbar-toggler animated-button" type="button" data-toggle="collapse" data-target="#navbarSupportedContent20"
        aria-controls="navbarSupportedContent20" aria-expanded="false" aria-label="Toggle navigation">
        <div class="animated-icon"><span></span><span></span><span></span></div>
      </button>
      <!-- Collapsible content -->
      <div class="collapse navbar-collapse" id="navbarSupportedContent20">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <%= link_to "Home <span class='sr-only'>(current)</span>".html_safe, root_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Browse Listings", listings_path, class: 'nav-link' %>
          </li>
          <li class="nav-item">
            <%= link_to "Create a Listing", new_listing_path, class: 'nav-link' %>
          </li>
          <% if user_signed_in? -%>
            <li><%= link_to 'Account', edit_user_registration_path %></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></li>
          <% else %>
            <li><%= link_to 'Sign up', new_user_registration_path %></li>
            <li><%= link_to 'Sign in', new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
      <!-- Collapsible content -->
      </div>
    </nav>
    <!--/.Navbar-->

    <!-- Page Wrapper -->
    <div id="page-wrapper" class="container">
      <% if notice %>
        <p class="alert alert-warning notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>

      <%= yield %>
    </div>
    <!-- Page Wrapper -->

    <script type="text/javascript">
    // Navbar animation
      $(document).ready(function () {
        $('.animated-button').on('click', function () {
          $('.animated-icon').toggleClass('open');
        });
      });
    </script>
  </body>
</html>
